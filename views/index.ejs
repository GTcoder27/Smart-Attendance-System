<%-include("headfoot/header.ejs")%>
<!-- <link rel="stylesheet" href="../public/stylesheets/index.css"> -->

<body class="bg-gradient-to-r from-cyan-200 to-blue-400 flex flex-col justify-center items-center " >
<%-include("headfoot/navbar.ejs")%>
    <h1 class="font-bold text-5xl m-[50px]">POSTs</h1>
    <div class="flex flex-wrap flex-row w-[90%] gap-5 justify-center items-center">
            <% posts.reverse().forEach(function(post){ %>
                    <div class="post rounded-md rounded-t-xl h-auto w-[500px] bg-green-200 border-[5px] border-zinc-700 ">
                        <img src="<%= post.img%>" alt="image" class="rounded-t h-auto ]">
                        <div class="m-1 flex flex-col justify-center items-center ">
                            <p class="m-1 text-black text-center font-bold text-[25px]"><%= post.heading%></p>
                            <p class="card-content" style="white-space: pre-wrap; word-wrap: break-word;" ><%= post.content%></p>
                        </div>
                        <div class="text-end m-2 text-zinc-700 font-bold"> --- by <%= post.author%></div>

                    </div>
            <% }) %>
    </div>
<%-include("headfoot/footer.ejs")%>
</body>
</html>